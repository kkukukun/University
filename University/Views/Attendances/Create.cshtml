@model University.Models.Attendance

@{
    ViewData["Title"] = "Create";
}
<div class="container" style="background-color: white; col-md-5">
    <h1>Добавление пропуска</h1>

    <h4>Заполните все поля </h4>
    <hr />
    <div class="row">
        <div class="col-md-5">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Hours" class="control-label">Часы</label>
                    <input asp-for="Hours" class="form-control" />
                    <span asp-validation-for="Hours" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Date_Attendance" class="control-label"></label>
                    <input asp-for="Date_Attendance" class="form-control" />
                    <span asp-validation-for="Date_Attendance" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StatusID" class="control-label">Статус</label>
                    <select asp-for="StatusID" class="form-control" asp-items="ViewBag.StatusID"></select>
                </div>
                <div class="form-group">
                    <label asp-for="SubjectID" class="control-label">Предмет</label>
                    <select asp-for="SubjectID" class="form-control" asp-items="ViewBag.SubjectID"></select>
                </div>
                <div class="form-group">
                    <label asp-for="StudentID" class="control-label">Студент</label>
                    <select asp-for="StudentID" class="form-control" asp-items="ViewBag.StudentID"></select>
                </div>
                <p>   </p>
                <div class="form-group">
                    <input type="submit" value="Создать" class="btn btn-primary" />
                    <a asp-action="Index"class="btn btn-success">Назад</a>
                <p>    </p>
                </div>
            </form>
        </div>
    </div>
</div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
