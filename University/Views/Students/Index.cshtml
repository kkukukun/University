@model IEnumerable<University.Models.Student>

@{
    ViewData["Title"] = "Студенты";
}
<div class="container" style="background-color:white">
    <h1>Список студентов</h1>
    <blockquote class="blockquote">
        <p class="mb-0">На данной странице отображаются все студенты, которые обучаются в университете</p>

    </blockquote>
    <p>
        <a asp-action="Create" class="btn btn-success btn-sm">Создать нового студента</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstMidName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EnrollmentDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Group)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstMidName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnrollmentDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Group.Abbreviation)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-outline-success btn-sm">Изменить</a>
                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-outline-info btn-sm">Детали</a>
                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-outline-danger btn-sm">Удалить</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>